{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "types": ["vite/client","node", "vite-plugin-svgr/client", "@types/react"],
    "paths": {
      "@mini-cart-layout": ["./src/modules/mini-cart-layout"],
      "@shopping-cart": ["./src/modules/shopping-cart"],
      "@device-details": ["./src/modules/device-details"],
      "@device-gallery": ["./src/modules/device-gallery"],
      "@sdk": ["./src/modules/sdk"],
      "@common-components": ["./src/modules/common-components"],
      "@feedback-handler": ["./src/modules/feedback-handler"],
      "@home": ["./src/modules/home"],
      "@navbar": ["./src/modules/navbar"],
      "@app-intl": ["./src/modules/app-intl"],
      "@config": ["./src/config"],
    }
  },
  "include": ["./src"],
  "exclude": ["./src/**/*.stories.tsx", "./src/**/*.test.tsx", "./node_modules", "./.storybook"]
}
